{
  "manifest_version": 2,
  
  "name": "Wand",
  "description": "Ouvrir les portes du savoir",
  "version": "1.0.0",
  
  "icons": {
    "16":  "icons/icon16.png",
    "32":  "icons/icon32.png",
    "48":  "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "background": {
    "scripts": ["src/background.js"]
  },

  "permissions": [
    "activeTab",
    "tabs",
    "webNavigation",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": {
      "16":  "icons/icon16.png",
      "32":  "icons/icon32.png",
      "48":  "icons/icon48.png",
      "128": "icons/icon128.png"
    }

  }
}
